@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ADD CLINIC</h2>

<form  class="form-horizontal"action="/Product/Create" method="post" enctype="multipart/form-data">
   @Html.AntiForgeryToken()
   
   
    <fieldset>
            
            @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {                   
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
				  @Html.ValidationSummary(true)
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				    <span aria-hidden="true">&times;</span>
				  </button>
				</div>                    
			}
   
   
   
   
	<div class="form-group">
	    <label   class="col-md-4 control-label">Name</label>
	     <div class="col-md-4">
	    <input type="text" name="Name" class="form-control input-md" required>
  	</div>
  	</div>
	<div class="form-group">
	    <label  class="col-md-4 control-label">Location</label>
	     <div class="col-md-4">
	    <textarea name="Location" class="form-control textarea-md" required>text here</textarea>
	    </div>
  	</div>
		
	<div class="form-group">
	    <label  class="col-md-4 control-label">Scedule</label>
	     <div class="col-md-4">
	    <input type="text" name="Schedule" class="form-control input-md" required>
	    </div>
  	
  		<div class="form-group">
	    <label class="col-md-4 control-label">Contact Info</label>
	     <div class="col-md-4">
	    <input type="text" name="ContactInfo"  class="form-control input-md" required>
	    </div>
  	</div>
  	
  	</div>	
  		<div class="form-group">
	    <label  class="col-md-4 control-label">Services</label>
	    <div class="col-md-4">
	    <textarea name="Services" class="form-control textarea-md" required>text here</textarea>
	    </div>
  	</div>
		
		<!-- File Upload -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="fileUpload">Photo</label>
                <div class="col-md-4">
                    <input type="file" accept="image/*" id="fileUpload" name="fileUpload" class="form-control input-md" required>
                </div>
            </div>
		
		
		  <div class="form-group">
                <label class="col-md-4 control-label" ></label>
                <div class="col-md-4">
                   <button type="submit" class="btn btn-primary" onclick="return confirm('Added Succesfully')">SAVE</button>
                   
                </div>
            </div>
		
  
  
  	  </fieldset>
</form>